{% extends 'NNGenieMaintenanceBundle::layout.html.twig' %}

{% block title %}GMTRAV - Procédés{% endblock %}

{% block stylesheets %}
    {{parent()}}
    <link href="{{ asset('bundles/nngenieinfosmat/vendors/iCheck/skins/flat/green.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/nngenieinfosmat/vendors/datatables.net-bs/css/dataTables.bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/nngenieinfosmat/vendors/datatables.net-buttons-bs/css/buttons.bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/nngenieinfosmat/vendors/datatables.net-responsive-bs/css/responsive.bootstrap.min.css') }}" rel="stylesheet">		
    <script> tinymce.EditorManager.execCommand('mceRemoveEditor',true, 'description_procede');  </script>
{% endblock %}

{% block content %}
    <div class="right_col" role="main">
        <div class="breadcrumbs">
            <div class="container">
                <ol class="breadcrumb">
                    {%include 'NNGenieMaintenanceBundle::entetebreamcrumb.html.twig'%}                
                    <li class="active"><a href="{{path('nn_genie_maintenance_procede_edit')}}" class="marron"><span  aria-hidden="true"></span> Modifier un procédé</a></li>
                </ol>
            </div>
        </div>
        <div class="">
            <div class="page-title">
                <div class="title_left">
                    <h3>
                        MODIFICATION D'UN PROCEDE
                    </h3>
                </div>

            </div>
            <div class="clearfix"></div>

            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>Informations sur le procédé</h2>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            {{ render_flash_alerts() }}                    
                            <form class="form-horizontal form-label-left" method="POST" action="{{ path('nn_genie_maintenance_procede_edit', {'id': idprocede}) }}">

                                <div class="item form-group">
                                    {{ form_label(form.intitule, "Intitule ", {'label_attr': {'class': 'control-label col-md-2 col-sm-3 col-xs-12'}}) }}
                                    {{ form_errors(form.intitule) }}

                                    <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
                                        {{ form_widget(form.intitule, {'attr': {'class': 'form-control col-md-7 col-xs-12', 'required':'required'}}) }}
                                    </div>
                                </div>
                                <div class="item form-group">
                                    {{ form_label(form.description, "Description ", {'label_attr': {'class': 'control-label col-md-2 col-sm-3 col-xs-12'}}) }}
                                    {{ form_errors(form.description) }}

                                    <div class="col-md-10 col-sm-6 col-xs-12 form-group has-feedback">
                                        {{ form_widget(form.description, {'attr': {'class': 'form-control col-md-7 col-xs-12', 'required':'required'}}) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    {{ form_rest(form)}}
                                </div>
                                <div class="ln_solid"></div>
                                <div class="form-group">
                                    <div class="col-md-6 col-md-offset-3">
                                        <input type="reset" class="btn btn-primary" value="Annuler"/>
                                        <input type="submit" class="btn btn-success" value="Valider"/>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>  
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{parent()}}
    <script src="{{ asset('bundles/nngenieinfosmat/vendors/validator/validator.min.js') }}"></script>

    <script>
        // initialize the validator function
        validator.message.date = 'not a real date';

        // validate a field on "blur" event, a 'select' on 'change' event & a '.reuired' classed multifield on 'keyup':
        $('form')
                .on('blur', 'input[required], input.optional, select.required', validator.checkField)
                .on('change', 'select.required', validator.checkField)
                .on('keypress', 'input[required][pattern]', validator.keypress);

        $('.multi.required').on('keyup blur', 'input', function () {
            validator.checkField.apply($(this).siblings().last()[0]);
        });

