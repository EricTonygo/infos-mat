            $collectionHolderQuestion = $('tbody.questions');

            // add a delete link to all of the existing piece form li elements
            $collectionHolderQuestion.find('tr').each(function () {
                addQuestionFormDeleteLink($(this));
            });


            /******** Ajout des pieces *********/

            // Get the ul that holds the collection of pieces
            $collectionHolderQuestion = $('tbody.questions');

            // add the "add a piece" anchor and li to the pieces ul
            $collectionHolderQuestion.append($newLinkQTr);

            // count the current form inputs we have (e.g. 2), use that as the new
            // index when inserting a new item (e.g. 2)
            $collectionHolderQuestion.data('index', $collectionHolderQuestion.find(':input').length);

            $addQuestionLink.on('click', function (e) {
                // prevent the link from creating a "#" on the URL
                e.preventDefault();

                // add a new piece form (see next code block)
                addQuestionForm($collectionHolderQuestion, $newLinkQTr);
            });
        });
        
        
        function addOperationFormDeleteLink($operationFormTr) {
            var $removeFormA = $('<td><button class="btn btn-danger fa fa-trash" style="margin-top:3%"></button></td>');
            $operationFormTr.append($removeFormA);
            $removeFormA.on('click', function (e) {
                // prevent the link from creating a "#" on the URL
