{% extends 'NNGenieMaintenanceBundle::layout.html.twig' %}

{% block title %}GMTRAV - Anomalies{% endblock %}

{% block stylesheets %}
    {{parent()}}
    <link href="{{ asset('bundles/nngenieinfosmat/vendors/iCheck/skins/flat/green.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/nngenieinfosmat/vendors/datatables.net-bs/css/dataTables.bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/nngenieinfosmat/vendors/datatables.net-buttons-bs/css/buttons.bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/nngenieinfosmat/vendors/datatables.net-responsive-bs/css/responsive.bootstrap.min.css') }}" rel="stylesheet">		

{% endblock %}

{% block content %}
    <div class="right_col" role="main">
        <div class="">
            <div class="page-title">
                <div class="title_left">
                    <h3>
                        MODIFICATION D'UNE ANOMALIE
                    </h3>
                </div>

            </div>
            <div class="clearfix"></div>

            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>Informations sur l'anomalie</h2>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            {{ render_flash_alerts() }}                    
                            <form class="form-horizontal form-label-left" method="POST" action="{{ path('nn_genie_maintenance_anomalie_edit', {'id': anomalie.id}) }}">

                                <div class="item form-group">
                                    {{ form_label(form.nom, "Nom ", {'label_attr': {'class': 'control-label col-md-1 col-sm-3 col-xs-12'}}) }}
                                    {{ form_errors(form.nom) }}
                                    
                                    <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
                                        {{ form_widget(form.nom, {'attr': {'class': 'form-control col-md-7 col-xs-12', 'required':'required'}}) }}
                                    </div>
                                </div>
                                <div class="item form-group">
                                    {{ form_label(form.type, "Type ", {'label_attr': {'class': 'control-label col-md-1 col-sm-3 col-xs-12'}}) }}
                                    {{ form_errors(form.type) }}

                                    <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
                                        {{ form_widget(form.type, {'attr': {'class': 'form-control col-md-7 col-xs-12', 'required':'required'}}) }}
                                    </div>
                                </div>
                                    
                                <div class="item form-group">
                                    <label class="control-label col-md-1 col-sm-3 col-xs-12">Opérations</label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <select id="select_operations" name="idoperations[]" class="select2_multiple form-control" multiple="multiple">
                                            {% for operation in operations %}
                                                <option value="{{operation.id}}">{{operation.nom}}</option>
                                            {% endfor %}
                                        </select>
                                    </div>
                                </div>
                                
                                <div class="item form-group" style="padding-left:10%">
                                    <h4>Modifier les operations liées à la anomalie</h4>
                                    <table class="table table-bordered"> 
                                        <thead>
                                            <tr>
                                                <th>Nom</th>
                                                <th>Procédé</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody class="operations" data-prototype="{{ _self.operation_prototype(form.operations.vars.prototype)|e }}">
                                            {% for operation in form.operations %}
                                                <tr>
                                                    {{ _self.operation_prototype(operation) }}
                                                </tr>
                                            {% endfor %}

                                        </tbody>
                                        {% macro operation_prototype(childForm) %}
                                            <td>{{ form_widget(childForm.nom, {'attr': {'class': 'form-control col-md-5 col-xs-8'}}) }}</td>
                                            <td>{{ form_widget(childForm.procede, {'attr': {'class': 'form-control col-md-3 col-xs-8'}}) }}</td>

                                        {% endmacro %}
                                    </table>
                                </div>
                                        
                                <div class="item form-group">
                                    <label class="control-label col-md-1 col-sm-3 col-xs-12">Tests</label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <select id="select_tests" name="idtests[]" class="select2_multiple form-control" multiple="multiple">
                                            {% for test in tests %}
                                                <option value="{{test.id}}">{{test.intitule}}</option>
                                            {% endfor %}
                                        </select>
                                    </div>
                                </div>        
                                
                                <div class="item form-group" style="padding-left:10%">
                                    <h4>Modifier les tests liés à l'anomalie</h4>
                                    <table class="table table-bordered"> 
                                        <thead>
                                            <tr>
                                                <th>Intitutle</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody class="tests" data-prototype="{{ _self.test_prototype(form.tests.vars.prototype)|e }}">
                                            {% for test in form.tests %}
                                                <tr>
                                                    {{ _self.test_prototype(test) }}
                                                </tr>
                                            {% endfor %}

                                        </tbody>
                                        {% macro test_prototype(childForm) %}
                                            <td>{{ form_widget(childForm.intitule, {'attr': {'class': 'form-control col-md-5 col-xs-8'}}) }}</td>

                                        {% endmacro %}
                                    </table>
                                </div> 

                                <div class="item form-group">
                                    <label class="control-label col-md-1 col-sm-3 col-xs-12">Questions</label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <select id="select_questions" name="idquestions[]" class="select2_multiple form-control" multiple="multiple">
                                            {% for question in questions %}
                                                <option value="{{question.id}}">{{question.intitule}}</option>
                                            {% endfor %}
                                        </select>
                                    </div>
                                </div>
                                <div class="item form-group" style="padding-left:10%">
                                    <h4>Modifier les questions liées à la anomalie</h4>
                                    <table class="table table-bordered"> 
                                        <thead>
                                            <tr>
                                                <th>Intitule</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody class="questions" data-prototype="{{ _self.question_prototype(form.questions.vars.prototype)|e }}">
                                            {% for question in form.questions %}
                                                <tr>
                                                    {{ _self.question_prototype(question) }}
                                                </tr>
                                            {% endfor %}
                                        </tbody>
                                        {% macro question_prototype(childForm) %}
                                            <td>{{ form_widget(childForm.intitule, {'attr': {'class': 'form-control col-md-4 col-xs-8'}}) }}</td>

                                        {% endmacro %}
                                    </table>
                                </div>
                                <div class="item form-group">
                                    {{ form_label(form.disfonconstates, "Disfonctionnement constatés ", {'label_attr': {'class': 'control-label col-md-1 col-sm-3 col-xs-12'}}) }}
                                    {{ form_errors(form.disfonconstates) }}

                                    <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
                                        {{ form_widget(form.disfonconstates, {'attr': {'class': 'form-control col-md-7 col-xs-12', 'required':'required'}}) }}
                                    </div>
                                </div>
                                <div class="item form-group">
                                    {{ form_label(form.causeseventuelles, "Causes éventuelles ", {'label_attr': {'class': 'control-label col-md-1 col-sm-3 col-xs-12'}}) }}
                                    {{ form_errors(form.causeseventuelles) }}

                                    <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
                                        {{ form_widget(form.causeseventuelles, {'attr': {'class': 'form-control col-md-7 col-xs-12', 'required':'required'}}) }}
                                    </div>
                                </div>
                               <div class="form-group">
                                   {{ form_widget(form._token) }}
                                </div>
                                <div class="ln_solid"></div>
                                <div class="form-group">
                                    <div class="col-md-6 col-md-offset-3">
                                        <input type="reset" class="btn btn-primary" value="Annuler"/>
                                        <input type="submit" class="btn btn-success" value="Valider"/>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>  
            </div>
        </div>
    </div>
{% endblock %}
