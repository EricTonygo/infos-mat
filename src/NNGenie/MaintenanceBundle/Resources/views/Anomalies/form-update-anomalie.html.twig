                // remove the li for the piece form
                $testFormTr.remove();
            });
        }
        
        var $collectionHolderTest;
        // setup an "add a piece" link
        //var $addQuestionLink = $('<button class="btn btn-primary" style="margin-left:2%; margin-top:1%"><i class="fa fa-plus"></i> Ajouter</button>');
        //var $newLinkQTr = $('<tr></tr>').append($addQuestionLink);

        jQuery(document).ready(function () {
            /******** suppression des operations *********/
            // Get the ul that holds the collection of pieces
            $collectionHolderTest = $('tbody.tests');

            // add a delete link to all of the existing piece form li elements
            $collectionHolderTest.find('tr').each(function () {
                addTestFormDeleteLink($(this));
            });
        });
    </script>
{% endblock %}
