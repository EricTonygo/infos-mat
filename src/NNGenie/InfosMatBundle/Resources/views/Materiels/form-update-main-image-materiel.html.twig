{% extends 'NNGenieInfosMatBundle::layout.html.twig' %}

{% block title %}GMTRAV - Materiels{% endblock %}

{% block stylesheets %}
    {{parent()}}
{% endblock %}

{% block content %}
    <div class="right_col" role="main">

        <div class="">
            <div class="page-title">
                <div class="title_left">
                    <h3>
                        MISE A JOUR DE L'IMAGE DU MATERIEL
                    </h3>
                </div>

            </div>
            <div class="clearfix"></div>

            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>Informations sur le materiel</h2>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            {{ render_flash_alerts() }}
                            <form class="form-horizontal form-label-left" method="POST" action="{{ path('nn_genie_infos_mat_materiel_edit_main_image', {'id': materiel.id}) }}" {{ form_enctype(form) }}>
								<div class="item form-group">
                                    {{ form_label(form.file, "Inserez une image", {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
                                    {{ form_errors(form.file, { 'attr' : {'class' : 'inputfile' }}) }}

                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        {{ form_widget(form.file) }}
                                    </div>
                                </div>
                                 <div class="form-group">
                                    {{ form_rest(form)}}
                                </div>
                                
                                <div class="ln_solid"></div>
                                <div class="form-group">
                                    <div class="col-md-6 col-md-offset-3">
                                        <input type="reset" class="btn btn-primary" value="Annuler"/>
                                        <input type="submit" class="btn btn-success" value="Valider"/>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>  
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{parent()}}
    <script src="{{ asset('bundles/nngenieinfosmat/vendors/validator/validator.min.js') }}"></script>

    <script>
        // initialize the validator function
        validator.message.date = 'not a real date';

        // validate a field on "blur" event, a 'select' on 'change' event & a '.reuired' classed multifield on 'keyup':
        $('form')
                .on('blur', 'input[required], input.optional, select.required', validator.checkField)
                .on('change', 'select.required', validator.checkField)
                .on('keypress', 'input[required][pattern]', validator.keypress);

        $('.multi.required').on('keyup blur', 'input', function () {
            validator.checkField.apply($(this).siblings().last()[0]);
        });

