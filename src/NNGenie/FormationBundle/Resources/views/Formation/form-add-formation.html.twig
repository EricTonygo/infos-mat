                                    {{ form_errors(form.date) }}

                                    <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
                                        {{ form_widget(form.date, {'attr': {'class': 'form-control col-md-7 col-xs-12'}}) }}
                                    </div>
                                </div>
                                <div class="item form-group">
                                    {{ form_label(form.formeformation, "Forme formation", {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
                                    {{ form_errors(form.formeformation) }}

