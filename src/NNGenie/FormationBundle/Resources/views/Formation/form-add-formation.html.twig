                                        {{ form_widget(form.formeformation, {'attr': {'class': 'form-control col-md-7 col-xs-12  select2_single'}}) }}
                                    </div>
                                </div>
                                <div class="item form-group">
                                    {{ form_label(form.typeformation, "Type formation", {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
                                    {{ form_errors(form.typeformation) }}

                                    <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
                                        {{ form_widget(form.typeformation, {'attr': {'class': 'form-control col-md-7 col-xs-12  select2_single'}}) }}
                                    </div>
                                </div>
                                <div class="item form-group">
                                    {{ form_label(form.centreformation, "Centre formation", {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
                                    {{ form_errors(form.centreformation) }}

                                    <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
                                        {{ form_widget(form.centreformation, {'attr': {'class': 'form-control col-md-7 col-xs-12  select2_single'}}) }}
                                    </div>
                                </div>
                                <div class="item form-group">
                                    {{ form_label(form.cible, "Cible", {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
                                    {{ form_errors(form.cible) }}

                                    <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
                                        {{ form_widget(form.cible, {'attr': {'class': 'form-control col-md-7 col-xs-12'}}) }}
                                    </div>
                                </div>
                                <div class="item form-group">
                                    {{ form_label(form.objectifprincip, "Objectif principal", {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
                                    {{ form_errors(form.objectifprincip) }}

                                    <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
                                        {{ form_widget(form.objectifprincip, {'attr': {'class': 'form-control col-md-7 col-xs-12'}}) }}
                                    </div>
                                </div>
                                <div class="item form-group">
                                    {{ form_label(form.objectifsecond, "Objectif sécondaire", {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
                                    {{ form_errors(form.objectifsecond) }}

                                    <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
                                        {{ form_widget(form.objectifsecond, {'attr': {'class': 'form-control col-md-7 col-xs-12'}}) }}
                                    </div>
                                </div>
                                <div class="item form-group">
                                    {{ form_label(form.idresponsable, "Responsables", {'label_attr': {'class': 'control-label col-md-3 col-sm-3 col-xs-12'}}) }}
                                    {{ form_errors(form.idresponsable) }}

                                    <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
                                        {{ form_widget(form.idresponsable, {'attr': {'class': 'form-control col-md-7 col-xs-12  select2_multiple'}}) }}
                                    </div>
                                </div>
                                    
                                 <div class="form-group">
                                    {{ form_rest(form)}}
                                </div>
                                {% if app.session.flashbag.get('message_failure') %}										
                                    <div id="message_projet">
                                        <div id="myAlert" class="alert alert-danger">
                                            <a href="#" class="close" data-dismiss="alert">&times;</a>
                                            {% for flash_message in app.session.flashbag.get('message_failure') %}
                                                {{ flash_message }}
                                            {% endfor %}
                                        </div>
                                    </div> 
                                {% endif %}
                                <div class="ln_solid"></div>
                                <div class="form-group">
                                    <div class="col-md-6 col-md-offset-3">
                                        <input type="reset" class="btn btn-primary" value="Annuler"/>
                                        <input type="submit" class="btn btn-success" value="Valider"/>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>  
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{parent()}}
    <script src="{{ asset('bundles/nngenieinfosmat/vendors/validator/validator.min.js') }}"></script>

    <script>
        // initialize the validator function
        validator.message.date = 'not a real date';

        // validate a field on "blur" event, a 'select' on 'change' event & a '.reuired' classed multifield on 'keyup':
        $('form')
                .on('blur', 'input[required], input.optional, select.required', validator.checkField)
                .on('change', 'select.required', validator.checkField)
                .on('keypress', 'input[required][pattern]', validator.keypress);

        $('.multi.required').on('keyup blur', 'input', function () {
            validator.checkField.apply($(this).siblings().last()[0]);
        });

        $('form').submit(function (e) {
            e.preventDefault();
            var submit = true;

            // evaluate the form using generic validaing
            if (!validator.checkAll($(this))) {
                submit = false;
            }

            if (submit)
                this.submit();

            return false;
        });
        $(document).ready(function() {
            $("#formation_typeformation").select2({
                placeholder: "Sélectionner le type correspondant",
                allowClear: true
            });
            $("#formation_formeformation").select2({
                placeholder: "Sélectionner la forme correspondante",
                allowClear: true
            });
            $("#formation_centreformation").select2({
                placeholder: "Sélectionner le centre correspondant",
                allowClear: true
            });
            $(".select2_multiple").select2({
              placeholder: "Sélectionnez les responsables correspondants",
              allowClear: true
            });
        });
    </script>
{% endblock %}
